<br><br><br><br>
<%provide(:title,'Sign up')%>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/error_messages', object: @user %>
    <h1>Sign up</h1>
    <%=form_for @user do |f|%> 
        <%=f.label:email%>
        <%=f.email_field :email, placeholder: "enter user name", class:'form-control'%>
        <%=f.label:password%>
        <%=f.password_field :password, placeholder: "8-20 characters",class:'form-control'%>
        <%=f.label:password_confirmation,"Confirmation"%>
        <%=f.password_field :password_confirmation, placeholder: "8-20 characters",class:'form-control'%>
        <%=f.label:mobile%>
        <%=f.text_field :mobile, placeholder: "mobile number",class:'form-control'%>
        <%=f.submit"sign up",class:"btn btn-primary"%>
    <%end%>
    <p><%=link_to "already a user?", login_path%></p>
</div>
</div>