<%=form_for(@user) do |f|%>
<%= render 'shared/error_messages', object: @user %>
<%=f.label:password%>
<%=f.password_field :password, placeholder: "8-20 characters",class:'form-control'%><br>
<%=f.label:password_confirmation,"Confirmation"%>
<%=f.password_field :password_confirmation, placeholder: "8-20 characters",class:'form-control'%><br>
<%=f.submit "Confirm", class:"btn btn-primary"%>
<%end%>