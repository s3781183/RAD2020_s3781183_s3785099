
<%=form_for(@user) do |f|%>
<%= render 'shared/error_messages', object: @user %>
<%=f.label:name%>
<%=f.text_field:name,class:'form-control'%><br>
<%=f.label:email%>
<%=f.email_field:email,class:'form-control'%><br>
<%=f.label:mobile%>
<%=f.text_field :mobile, placeholder: "mobile number",class:'form-control'%><br>
<%=f.label:city%>
<%=f.text_field :city, placeholder: "city",class:'form-control'%><br>
<%=f.submit "Confirm", class:"btn btn-primary"%>

<%end%>