<%=form_for(@user)do|f|%>
<%=f.label:card_type%>
<%=f.text_field :card_type, placeholder: "Your Full Name",class:'form-control'%><br>
<%=f.label:card_number%>
<%=f.text_field :card_number, placeholder: "Your student number",class:'form-control'%><br>
<%=f.file_field :card_image%>
<span class="picture">
<%=image_tag current_user.card_image.url if current_user.card_image?%><br>
</span>
<%=f.submit"Confirm",class:"btn btn-primary"%>
<%end%>