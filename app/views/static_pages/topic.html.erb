<% provide(:title) %><br><br>
 
<%=render 'header'%>
   <div class="card">
      <h5>Selected Post</h5>
       <% @microposts.each do |micropost|%>
       <ol class="microposts">
            <br>  <p> <%=link_to gravatar_for(micropost.user,size:55), micropost.user%> 
            <p> <h5><%=link_to micropost.title , micropost,micropost: micropost%></h5></p>
           <p>  <%=link_to micropost.user.email , micropost.user%> 
             <%=micropost.created_at %>
             <%=micropost.topic %> 
             Views: <%=micropost.view %> </p>
         <%end%></ol>
      
   </div>
 </div>
 <div class="rightcolumn">
   <div class="card">
     <h3>Recent Members</h3>
     <% @recentUsers.each do |user|%>
      <p><%=link_to gravatar_for(user,size:50), user%></p>
     <%end%>  
        </div>
   <div class="card">
     <h3>Topic</h3>
     <%=link_to "A.I", topic_path(:name => "A.I"), class: "round_button"%>
     <%=link_to "Game", topic_path(:name => "Game"), class: "round_button"%>
     <%=link_to "Rmit", topic_path(:name=> "Rmit"), class: "round_button"%>
     <%=link_to "V.R.", topic_path(:name => "V.R."), class: "round_button"%>

   </div>
   <div class="card">
     <h3>Post</h3>
      <% @allMicroposts.each do |micropost|%>
             <p><%=link_to micropost.title, micropost,micropost: micropost%></p>
         <%end%>
   </div>
   <div class="card">
   <h3>Links</h3>
   <%=link_to "Rails", '#', class: "round_button"%>
   <%=link_to "Rmit", '#', class: "round_button"%>
   <%=link_to "Docs.", '#', class: "round_button"%>
 </div>
 </div>
</div>

