<p id="notice"><%= notice %></p>


<%if @micropost.user_id==current_user.id%>
    <p>
          <strong>Topic:</strong>
          <%= @micropost.topic%>
      </p>
    <p>
      <strong>Title:</strong>
      <%= @micropost.title%>
    </p>

    <p>
      <strong>User:</strong>
      <%= @micropost.user.email %>
    </p>

    <p>
      <strong>Comments:</strong>
        <%= @micropost.comments.count %> 
        <p><%=render @micropost.comments%> </p>
    </p>
    <p>
       <strong>Add a comment</strong>
      <%=render'comments/form'%>
    </p>

    <%= link_to 'Edit', edit_micropost_path(@micropost) %> 
    <%= link_to 'Back', microposts_path %>
<% else %>
     <p>
          <strong>Topic:</strong>
          <%= @micropost.topic%>
      </p>
    <p>
      <strong>Title:</strong>
      <%= @micropost.title%>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @micropost.content%>
    </p>

    <p>
      <strong>User:</strong>
      <%= @micropost.user.email %>
    </p>

<% end %>